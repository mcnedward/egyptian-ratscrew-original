<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblSelectPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a picture to use as your card back:"
        android:textSize="@dimen/names" />

    <Button
        android:id="@+id/btnDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="DefaultClicked"
        android:text="Default" />

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="TakeNewPicture"
        android:text="Take New Picture" />

    <Button
        android:id="@+id/btnExistingPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="OpenExistingImage"
        android:text="Use Existing Picture" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SavePicture"
        android:text="Save Picture" />

    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="207dp"
        android:layout_height="225dp"
        android:paddingLeft="@dimen/CardBackPreviewPadding"
        android:src="@drawable/b2fv" />

</LinearLayout>