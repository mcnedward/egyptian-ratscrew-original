<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="30dip"
        android:paddingTop="30dip"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnRules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:onClick="viewRules"
        android:text="@string/rules" />

    <Button
        android:id="@+id/btnComputer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:onClick="startNewGame"
        android:text="@string/computer" />

    <Button
        android:id="@+id/btnHuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/human" />
    
    <Button
        android:id="@+id/btnStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="viewStatistics"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/statistics" />

    <Button
        android:id="@+id/btnFBLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="fbLogin"
        android:text="Login with Facbook" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startNewUser"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/btnUser" />

    <Button
        android:id="@+id/btnDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startDeveloper"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/btnDeveloper" />

</LinearLayout>